@model List<SnakeApplication.Models.Player>;

<html>

<head>
	<style>
		body{
			background-color:black;
		}
		 table {
			background-color:white;
            width: 80%;
            margin: 0 auto;
            border-collapse: collapse; /* Optional: Remove cell spacing */
        }
		th{
			background-color:white;
			padding: 20px;
		    border:1px solid black;
		}
	    td{
		background-color:white;
		padding:30px;
		border:1px solid black;
	    }
		h1{
			text-align:center;
			color:white;
		}
	</style>
</head>


<body>
<div>
	<h1>Leaderboard</h1>
	<br />
	<table>
		<tr>
			<th>Rank</th>
			<th>Name</th>
			<th>Score</th>
		</tr>
		@for(int i =0;i<@Model.Count;i++){
			<tr>
				<td><strong>@(i+1)</strong></td>
				<td><strong>@Model[i].Name</strong></td>
				<td><strong>@Model[i].Score</strong></td>
			</tr>
		}




	</table>

</div>

</body>

</html>