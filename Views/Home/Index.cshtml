@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/site.css" />
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
   <a asp-controller="Game" asp-action="Index"> <h1>Play Snake Game Now</h1></a>
</div>
<div class="hero-section">
    <div class="hero-container">
        <div class="photo-grid">
            <img class="first-image" src="~/Images/mak.jpg" alt="Cat">
            <img class="second-image" src="~/Images/art.jpg" alt="Coffe">
            <img class="third-image" src="~/Images/happy.jpg" alt="Bus">
        </div>
    </div>
</div>

<!-- Reviews Section -->
